{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "datastar": [
        "./node_modules/datastar/library/src/bundles/datastar.ts"
      ],
      "@engine": [
        "./node_modules/datastar/library/src/engine/engine.ts"
      ],
      "@engine/*": [
        "./node_modules/datastar/library/src/engine/*"
      ],
      "@plugins/*": [
        "./node_modules/datastar/library/src/plugins/*"
      ],
      "@types": [
        "./node_modules/datastar/library/src/engine/types.ts"
      ],
      "@utils/*": [
        "./node_modules/datastar/library/src/utils/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}